# Server Configuration
SERVER_PORT=8080
ENVIRONMENT=development

# Database Configuration
DB_URL=postgresql://user:password@localhost:5432/dbname?sslmode=disable

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWE_SECRET=your-jwe-secret-here-16b!

# S3 Configuration
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# SMS Configuration
SMS_PROVIDER=dummy
SMSTwilioSID=your-twilio-sid
SMSTwilioToken=your-twilio-token
SMS_FROM_NUMBER=+1234567890

# Email Configuration
EMAIL_PROVIDER=dummy
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourapp.com
FROM_NAME=Your App
EMAIL_TEMPLATE_PATH=./templates/emails

# SES Configuration
SES_REGION=us-east-1
SES_ACCESS_KEY_ID=your-ses-access-key
SESSecretAccessKey=your-ses-secret-key

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key

# Captcha Configuration
CAPTCHA_PROVIDER=dummy

# Cloudflare Turnstile Configuration (Recommended)
# CAPTCHA_PROVIDER=turnstile
# CLOUDFLARE_SECRET_KEY=your-turnstile-secret-key
# CLOUDFLARE_SITEKEY=your-turnstile-site-key

# hCaptcha Configuration
# CAPTCHA_PROVIDER=hcaptcha
# HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key
# HCAPTCHA_SITEKEY=your-hcaptcha-site-key

# Google reCAPTCHA Configuration
# CAPTCHA_PROVIDER=recaptcha
# RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
# RECAPTCHA_SITEKEY=your-recaptcha-site-key